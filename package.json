{
  "name": "mcp-utilities",
  "version": "1.0.3",
  "description": "MCP Communication Server - Node.js TypeScript Implementation for Email and WhatsApp communication",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-utilities": "bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "clean": "rimraf dist",
    "prepare": "chmod +x bin/cli.js && npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "postinstall": "node scripts/install.js",
    "install-global": "npm install -g .",
    "oauth-setup": "tsx src/oauth-setup.ts"
  },
  "keywords": [
    "mcp",
    "communication",
    "email",
    "whatsapp",
    "gmail",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "form-data": "^4.0.0",
    "google-auth-library": "^9.6.3",
    "googleapis": "^133.0.0",
    "mime-types": "^3.0.1",
    "mongodb": "^6.3.0",
    "nodemailer": "^6.9.8",
    "pdfkit": "^0.15.0",
    "typesense": "^2.0.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20.19.1",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.13.4",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
